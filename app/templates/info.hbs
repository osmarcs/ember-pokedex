{{#link-to 'index' class='back-button'}} &lt; {{/link-to}}

<div class="poke-profile">
  <div>#{{format-number number}} - {{pokemon.name}}</div>
  <img class="poke-sprite" src="//serebii.net/sunmoon/pokemon/{{format-number number}}.png" />
</div>

<ul class="poke-types">
  {{#each pokemon.types as |type| }}
  <li>
    <img src="//serebii.net/pokedex-rs/type/{{type.name}}.gif" alt="">
  </li>
  {{/each}}
</ul>

<table class="stats">
  <tr>
    <td>Attack</td>
    <td>Defense</td>
    <td>Sp Atk</td>
    <td>Sp Def</td>
    <td>Speed</td>
  </tr>
  <tr>
    <td>{{pokemon.attack}}</td>
    <td>{{pokemon.defense}}</td>
    <td>{{pokemon.sp_atk}}</td>
    <td>{{pokemon.sp_def}}</td>
    <td>{{pokemon.speed}}</td>
  </tr>
</table>